{
  "name": "capacitor-airbridge",
  "version": "0.1.4",
  "description": "Capacitor plugin for Airbridge SDK integration",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "ios/Sources/",
    "ios/Tests/",
    "ios/.gitignore",
    "Package.swift",
    "CapacitorPluginAirbridge.podspec"
  ],
  "author": "GPAI Team <dev@gpai.co>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/esc5221/capacitor-airbridge.git"
  },
  "bugs": {
    "url": "https://github.com/esc5221/capacitor-airbridge/issues"
  },
  "homepage": "https://github.com/esc5221/capacitor-airbridge#readme",
  "keywords": [
    "capacitor",
    "plugin",
    "airbridge",
    "attribution",
    "deeplink",
    "analytics"
  ],
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "cd ios && pod install --deployment && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin -destination generic/platform=iOS",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "lint": "npm run eslint && npm run prettier -- --check && npm run swiftlint -- lint",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write && npm run swiftlint -- --fix --format",
    "eslint": "eslint . --ext .ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\"",
    "swiftlint": "node-swiftlint",
    "docgen": "docgen --api AirbridgePlugin --output-readme README.md --output-json dist/docs.json",
    "build": "npm run clean && tsc && rollup -c rollup.config.js",
    "build:withdocs": "npm run clean && npm run docgen && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@capacitor/docgen": "^0.2.2",
    "@capacitor/ios": "^6.0.0",
    "@ionic/eslint-config": "^0.4.0",
    "@ionic/prettier-config": "^4.0.0",
    "@ionic/swiftlint-config": "^1.1.2",
    "@types/jest": "^29.5.12",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "~3.2.5",
    "prettier-plugin-java": "~2.6.4",
    "rimraf": "^5.0.5",
    "rollup": "^4.12.0",
    "swiftlint": "^1.0.2",
    "ts-jest": "^29.1.2",
    "typescript": "~5.3.3"
  },
  "peerDependencies": {
    "@capacitor/core": "^6.0.0"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  }
}